{
  "compilerOptions": {
    //    "sourceMap": true,
    //    "removeComments": false,
    //    "noImplicitAny": true,
    //    "suppressImplicitAnyIndexErrors": true,
    "rootDir": "./src/",
    "target": "es6",
    "outDir": "./public/",
    "lib": [
      "es6"
    ],
    "types": [
      "reflect-metadata"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "typings/main",
    "typings/main.d.ts"
  ]
}